<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventaris.controller.PenggunaController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <VBox spacing="10.0" HBox.hgrow="ALWAYS">
      <Label text="Manajemen Pengguna (User)">
         <font><Font name="System Bold" size="18.0" /></font>
      </Label>
      <TableView fx:id="tablePengguna" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colUsername" text="Username" prefWidth="250.0" />
          <TableColumn fx:id="colRole" text="Role" prefWidth="150.0" />
          <TableColumn fx:id="colGudang" text="ID Gudang" prefWidth="100.0" />
        </columns>
      </TableView>
      <Button text="Kembali ke Dashboard" onAction="#handleBack" />
   </VBox>

   <VBox spacing="10.0" prefWidth="250.0" style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-background-radius: 5;">
      <Label text="Form Akun">
         <font><Font name="System Bold" size="14.0" /></font>
      </Label>
      
      <Label text="Username" />
      <TextField fx:id="txtUsername" promptText="misal: staff_bali" />
      
      <Label text="Password" />
      <TextField fx:id="txtPassword" promptText="Masukkan password" />
      
      <Label text="Role / Hak Akses" />
      <ComboBox fx:id="comboRole" prefWidth="300.0" promptText="-- Pilih Role --" />
      
      <Label text="Penempatan Gudang" />
      <ComboBox fx:id="comboGudang" prefWidth="300.0" promptText="-- Pilih Gudang --" />
      
      <HBox spacing="5.0" style="-fx-padding: 10 0 0 0;">
         <Button text="Simpan" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
         <Button text="Update" onAction="#handleUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
         <Button text="Hapus" onAction="#handleDelete" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
         <Button text="Clear" onAction="#handleClear" />
      </HBox>
   </VBox>
</HBox>