<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventaris.controller.TransaksiMasukController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <VBox spacing="10.0" HBox.hgrow="ALWAYS">
      <Label text="Riwayat Barang Masuk">
         <font><Font name="System Bold" size="18.0" /></font>
      </Label>
      <TableView fx:id="tableMasuk" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="100.0" />
          <TableColumn fx:id="colBarang" text="Barang" prefWidth="150.0" />
          <TableColumn fx:id="colSupplier" text="Supplier" prefWidth="150.0" />
          <TableColumn fx:id="colGudang" text="Gudang" prefWidth="120.0" />
          <TableColumn fx:id="colJumlah" text="Jml" prefWidth="50.0" />
          <TableColumn fx:id="colKeterangan" text="Ket" prefWidth="150.0" />
        </columns>
      </TableView>
      <Button text="Kembali ke Dashboard" onAction="#handleBack" />
   </VBox>

   <VBox spacing="10.0" prefWidth="320.0" style="-fx-background-color: #e8f5e9; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #4CAF50; -fx-border-radius: 5;">
      <Label text="Input Barang Masuk" textFill="#2e7d32">
         <font><Font name="System Bold" size="14.0" /></font>
      </Label>
      
      <Label text="Tanggal Masuk" />
      <DatePicker fx:id="dateTanggal" prefWidth="300.0" />
      
      <Label text="Pilih Barang" />
      <ComboBox fx:id="comboBarang" prefWidth="300.0" promptText="-- Pilih Barang --" />
      
      <Label text="Pilih Supplier" />
      <ComboBox fx:id="comboSupplier" prefWidth="300.0" promptText="-- Pilih Supplier --" />
      
      <Label text="Masuk ke Gudang" />
      <ComboBox fx:id="comboGudang" prefWidth="300.0" promptText="-- Pilih Gudang --" />
      
      <Label text="Jumlah (Qty)" />
      <TextField fx:id="txtJumlah" promptText="0" />

      <Label text="Keterangan" />
      <TextArea fx:id="txtKeterangan" prefHeight="60.0" promptText="Catatan tambahan..." />
      
      <Button text="SIMPAN TRANSAKSI" onAction="#handleSave" maxWidth="Infinity" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;" />
   </VBox>
</HBox>